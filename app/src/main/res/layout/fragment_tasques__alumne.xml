<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineAmbientShadowColor="#C4C4C4"
    tools:context=".Tasques_Alumne">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/nivell"
                    android:layout_width="wrap_content"
                    android:layout_height="81dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/nivell"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="81dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/xp" />

                    <ProgressBar
                        android:id="@+id/barraExperiencia"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left" />

                    <TextView
                        android:id="@+id/TasquesCompletades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tasques_completades" />

                    <ProgressBar
                        android:id="@+id/barraTasquesCompletades"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="217dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:clickable="false" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divisorEstadistiques"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="?android:attr/listDivider" />

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTasques"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

<!--        Abaix, quan un alumne vol pujar una tasca li apareixera un menu inferior,-->
<!--        hem intentat implementar-ho (https://m2.material.io/components/sheets-bottom/android#using-bottom-sheets)-->
<!--        pero es un menu i necessita programaciÃ³.-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>