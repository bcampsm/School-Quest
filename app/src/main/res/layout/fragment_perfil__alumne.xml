<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil_Alumne">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="197dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="146dp"
                    android:layout_height="174dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_margin="25dp"
                    tools:src="@tools:sample/avatars"
                    android:contentDescription="@string/foto_de_perfil" />

                <LinearLayout
                    android:layout_width="177dp"
                    android:layout_height="173dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Noms"
                        style="@style/TextPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/noms_alumne" />

                    <View
                        android:id="@+id/divider"
                        style="@style/DividerPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/TextGrup"
                        style="@style/TextPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/grup" />

                    <View
                        android:id="@+id/divider2"
                        style="@style/DividerPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/textNivell"
                        style="@style/TextPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="@string/nivell_perfil" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/divider3"
                        style="@style/DividerPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/TextPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/schoolpoints" />

                    <View
                        android:id="@+id/divider4"
                        style="@style/DividerPerfils"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider6"
                style="@style/DividerPerfils"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextTareasCompletadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tareas completadas"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TareasCompletadasCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarAsignatura1"
                style="@style/CustomProgressBarPerfilsAsignatures"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp" />

            <ProgressBar
                android:id="@+id/progressBarAsignatura2"
                style="@style/CustomProgressBarPerfilsAsignatures"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp" />

            <ProgressBar
                android:id="@+id/progressBarAsignatura3"
                style="@style/CustomProgressBarPerfilsAsignatures"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp" />

            <ProgressBar
                android:id="@+id/progressBarAsignatura4"
                style="@style/CustomProgressBarPerfilsAsignatures"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp" />

            <View
                android:id="@+id/divider5"
                style="@style/DividerPerfils"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textInforme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/xits_desbloquejats"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>